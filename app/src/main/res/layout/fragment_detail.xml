<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"

    tools:context=".DetailFragment">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="back button"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sora"
            android:gravity="center_horizontal"
            android:text="Detail"
            android:textColor="#494747"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="heart button"
            android:src="@drawable/heart" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/middleImage"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/page_2_coffeepng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:shapeAppearanceOverlay="@style/RoundedImageView" />

    <TextView
        android:id="@+id/coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sora"
        android:text="Caffe Mocha"
        android:textColor="#3C3B3B"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/middleImage"
        app:layout_constraintTop_toBottomOf="@+id/middleImage" />

    <LinearLayout
        android:id="@+id/icon_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/middleImage"
        app:layout_constraintStart_toStartOf="@+id/middleImage"
        app:layout_constraintTop_toBottomOf="@+id/coffee_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice/Hot"
            android:textColor="#6B6B6B"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/icon_background"
            android:contentDescription="Coffee machine icon"
            android:padding="10dp"
            android:src="@drawable/bike" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/icon_background"
            android:contentDescription="Coffee bean icon"
            android:padding="10dp"
            android:src="@drawable/bean" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_background"
            android:contentDescription="Milk icon"
            android:padding="10dp"
            android:src="@drawable/milk" />

    </LinearLayout>


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sora"
        android:text="â­ 4.8"
        android:textColor="#3C3B3B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/middleImage"
        app:layout_constraintTop_toBottomOf="@id/icon_container" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sora"
        android:text="(230)"
        android:textColor="#A63C3B3B"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@id/rating"
        app:layout_constraintStart_toEndOf="@id/rating" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="@+id/middleImage"
        app:layout_constraintStart_toStartOf="@+id/middleImage"
        app:layout_constraintTop_toBottomOf="@id/rating" />

    <TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sora"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/middleImage"
        app:layout_constraintTop_toBottomOf="@id/rating" />


    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sora"
        android:lineSpacingExtra="4dp"
        android:text="A cappuccino is an approximately 150 ml (5 oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo... Read More"
        android:textColor="#9C000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/middleImage"
        app:layout_constraintStart_toStartOf="@id/middleImage"
        app:layout_constraintTop_toBottomOf="@id/description_title" />


    <TextView
        android:id="@+id/size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/sora"
        android:text="Size"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <LinearLayout
        android:id="@+id/size_toggle_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/middleImage"
        app:layout_constraintStart_toStartOf="@id/middleImage"
        app:layout_constraintTop_toBottomOf="@id/size_title">

        <Button
            android:id="@+id/button_s"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_size_unselected"
            android:fontFamily="@font/sora"
            android:text="S"
            android:textAllCaps="false"
            android:textColor="#2F2D2C"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_m"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_size_selected"
            android:fontFamily="@font/sora"
            android:text="M"
            android:textAllCaps="false"
            android:textColor="#C67C4E"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <!-- "L" Button -->
        <Button
            android:id="@+id/button_l"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_size_unselected"
            android:fontFamily="@font/sora"
            android:text="L"
            android:textAllCaps="false"
            android:textColor="#2F2D2C"
            android:textSize="16sp"
            app:backgroundTint="@null" />

    </LinearLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_background"
        android:padding="24dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#9B9B9B"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora"
            android:text="$ 4.53"
            android:textColor="#C67C4E"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_label" />

        <Button
            android:id="@+id/buy_now_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:backgroundTint="#C67C4E"
            android:fontFamily="@font/sora"
            android:text="Buy Now"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_value"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
